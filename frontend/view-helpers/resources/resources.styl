/**
* Resources Section
* @class Resources
* @module base.css
*/
.control
	text-align center
.hide
	display none
.ctrl-txt
	padding-top 2px
.alert
	background-color #F2DEDE
	border 1px solid #EBCCD1
	border-radius 4px
	color #A94442
	font-size 13px
	margin-bottom 20px
	padding 8px 10px
	&.success
		background-color #DFF0D8
		border-color #D6E9C6
		color #3C763D
label.error
	color #A94442
	display block
	padding-top 2px
.count-charts
	color #000
	display block
	font-size 13px
	padding-top 6px
/* Cabecera del head */
.frm-head
	background #fafafa
	background -moz-linear-gradient(top, #fafafa 0%, #efefef 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fafafa), color-stop(100%, #efefef))
	background -webkit-linear-gradient(top, #fafafa 0%, #efefef 100%)
	background -o-linear-gradient(top, #fafafa 0%, #efefef 100%)
	background -ms-linear-gradient(top, #fafafa 0%, #efefef 100%)
	background linear-gradient(top, #fafafa 0%, #efefef 100%)
	border-bottom 1px solid #D5D5D5
	padding 12px 9px
	position relative
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#fafafa', endColorstr='#efefef',GradientType=0 )")
	h2
		font-size 16px
		font-weight 400
		padding-left 22px
		position relative
		span
			background url(routImg+"icon-set.png")
			height 13px
			left 0
			position absolute
			top 1px
			width 14px
/* Utilitarios */
.help-iblock
	float left
	padding 3px 0 0 12px
	text-align justify
/* Icons */
.ic-close
	background #000 url(routImg+"icon-set.png") aicClose
	border-radius 22px
	height 22px
	position absolute
	right -11px
	top -11px
	width 22px
	&:hover
		opacity 0.8
/* Tama√±os */
.w565
	width 565px
.w540
	width 540px !important
.pl10
	padding-left 10px