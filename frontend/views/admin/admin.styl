/**
* Admin CSS
* @class reset
* @module admin.css
*/
/* Top Admin*/ 
.ctn-head
	margin-bottom 25px
	.middleNav
		float right
	.side-logo
		float left
.middleNav
	li
		float left
		margin-left 24px
		&:first-child
			margin-left 0
	.head-info
		display block
		height 46px
		overflow hidden
		padding 6px 10px 0
		position relative
		.count
			color #16925C
			display block
			font-size 26px
			line-height 26px
			margin-bottom 2px
			text-align center
		.desc
			color #FFFFFF
			display block
			font-size 12px
			line-height 12px
			text-align center
/* Content Admin */
.container
	.frm-head
		padding 9px
		.btn-admin
			font-size 11px
			padding 5px 8px
			position absolute
			right 9px
			top 7px
	.icTable
		background url(routImg+"icon-set.png") icTable no-repeat
		height 14px
		top 2px
		width 14px
	.control-label
		width 130px
	.lbloption
		padding-top 1px
	.controls
		width 440px
.ctn-back
	padding-bottom 18px
	text-align right
/* Menu de Administrador */
.admin-menu
	padding-bottom 36px
	li
		background #fafafa
		background -moz-linear-gradient(top, #fafafa 0%, #efefef 100%)
		background -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fafafa), color-stop(100%, #efefef))
		background -webkit-linear-gradient(top, #fafafa 0%, #efefef 100%)
		background -o-linear-gradient(top, #fafafa 0%, #efefef 100%)
		background -ms-linear-gradient(top, #fafafa 0%, #efefef 100%)
		background linear-gradient(top, #fafafa 0%, #efefef 100%)	
		font-family family2
		font-size 15px
		//margin-top 1px
		position relative
		&:first-child
			margin 0
	& > li
		&:hover
			& > a
				background #2db97c
				background unquote("url(data:image/svg+xml;base64,)")
				background -moz-linear-gradient(top,  #2db97c 0%, #077a48 100%)
				background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#2db97c), color-stop(100%,#077a48))
				background -webkit-linear-gradient(top,  #2db97c 0%,#077a48 100%)
				background -o-linear-gradient(top,  #2db97c 0%,#077a48 100%)
				background -ms-linear-gradient(top,  #2db97c 0%,#077a48 100%)
				background linear-gradient(to bottom,  #2db97c 0%,#077a48 100%)
				//border 1px solid #3C4049
				color #FFF
			ul
				display block
	ul
		display none
		left 100%
		position absolute
		top 0
		width 178px
		z-index 99
		a
			height auto
			line-height 16px
		li
			margin 0
			a, a:hover
				//border-top none
				padding 10px 18px 8px
			/*&:first-child
				a
					border-top 1px solid #2db97c
				a:hover
					border-top 1px solid #2db97c*/
	a
		//border 1px solid #2db97c
		border-radius 2px
		color #494949
		display block
		height 20px
		line-height 20px
		padding 10px 0 8px 35px
		position relative
		&:hover, &.active
			background #2db97c
			background unquote("url(data:image/svg+xml;base64,)")
			background -moz-linear-gradient(top,  #2db97c 0%, #077a48 100%)
			background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#2db97c), color-stop(100%,#077a48))
			background -webkit-linear-gradient(top,  #2db97c 0%,#077a48 100%)
			background -o-linear-gradient(top,  #2db97c 0%,#077a48 100%)
			background -ms-linear-gradient(top,  #2db97c 0%,#077a48 100%)
			background linear-gradient(to bottom,  #2db97c 0%,#077a48 100%)
			//border 1px solid #3C4049
			color #FFF
			text-decoration none
	span
		height 14px
		left 10px
		position absolute
		top 12px
		width 14px
		background-image url(routImg+"icon-set.png")
		background-repeat no-repeat
	.icad-dashb
		background-position icDashboard
	.icad-prod
		background-position icProduct
	.icad-prom
		background-position icPromotion
	.icad-ytb
		background-position icYoutube
.admin-title
	background #2db97c
	background unquote("url(data:image/svg+xml;base64,)")
	background -moz-linear-gradient(top,  #2db97c 0%, #077a48 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#2db97c), color-stop(100%,#077a48))
	background -webkit-linear-gradient(top,  #2db97c 0%,#077a48 100%)
	background -o-linear-gradient(top,  #2db97c 0%,#077a48 100%)
	background -ms-linear-gradient(top,  #2db97c 0%,#077a48 100%)
	background linear-gradient(to bottom,  #2db97c 0%,#077a48 100%)
	border-radius 2px
	color #FAFAFA
	font-size 16px
	height 20px
	line-height 20px
	margin-bottom 6px
	padding 9px 15px
.container
	p
		margin-bottom 12px
.list-opt
	li
		background url(routImg+"icon-set.png") alistOption no-repeat
		margin-top 4px
		padding-left 15px
		&:first-child
			margin 0
.tblaction
	background-image url(routImg+"icon-set.png")
	background-repeat no-repeat
	display inline-block
	height 16px
	text-indent -9999px
	vertical-align middle
	width 16px
	& + .tblaction
		margin-left 6px
	&.ico-edit
		background-position icEdit
	&.ico-delete
		background-position icDelete
/* Banner */
.ctn-file
	border-bottom 1px solid #D5D5D5
	margin-bottom 16px
	padding-bottom 12px
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	.btn-file
		float left
	.help-iblock
		font-size 12px
		line-height 12px
/* Hacks Tbl */
.hideSearchTbl
	#datatable_filter
		display none