include jade/vars.jade
include jade/head.jade
body
	include jade/include/header.jade
	#wrapper
		.ctn-head.row
			img(class="side-logo",src="img/logo.png")
			ul.middleNav
				li
					span.head-info
						span.count 578
						span.desc Créditos
		include jade/include/sidebar.jade
		.container
			h3.admin-title Envío de SMS - Desde Archivo
			.frm-panel
				form
					.control-group
						label(class="control-label ctrl-txt") Tipo de archivo
						.controls TXT o CSV
					.control-group
						label(class="control-label ctrl-txt") Formato de archivo
						.controls Celular;Fecha;Mensaje (La fecha sólo se ingresa en caso de ser un envío agendado)
					.control-group
						label(class="control-label ctrl-txt") Formato de archivo
						.controls
							input(type="file")
					.control-group.last
						.control
							button(type="submit",class="btn-admin") Enviar
	include jade/include/footer.jade